{
  "version": "0.1",
  "prefixes": {
    "schema": "http://schema.org/",
    "ext": "http://example.com/"
  },
  "resources": {
    "players": {
      "name": "player",
      "class": "schema:Person",
      "attributes": {
        "name": {
          "type": "string",
          "predicate": "schema:givenName"
        }
      },
      "relationships": {
        "positions": {
          "predicate": "schema:competitor",
          "target": "position",
          "cardinality": "many",
          "inverse": true
        }
      },
      "new-resource-base": "http://example.com/players/"
    },
    "rounds": {
      "name": "round",
      "class": "schema:SportsEvent",
      "attributes": {
        "time": {
          "type": "datetime",
          "predicate": "schema:startTime"
        }
      },
      "relationships": {
        "positions": {
          "predicate": "schema:event",
          "target": "position",
          "cardinality": "many"
        },
        "hands": {
          "predicate": "schema:subEvent",
          "target": "hand",
          "cardinality": "many"
        }
      },
      "new-resource-base": "http://example.com/rounds/"
    },
    "positions": {
      "name": "position",
      "class": "schema:Integer",
      "attributes": {
        "index": {
          "type": "integer",
          "predicate": "ext:value"
        }
      },
      "relationships": {
        "player": {
          "predicate": "schema:competitor",
          "target": "player",
          "cardinality": "one"
        },
        "round": {
          "predicate": "schema:event",
          "target": "round",
          "cardinality": "one",
          "inverse": true
        }
      },
      "new-resource-base": "http://example.com/positions/"
    },
    "hands": {
      "name": "hand",
      "class": "schema:SportsEvent",
      "attributes": {
        "contract": {
          "type": "string",
          "predicate": "schema:description"
        },
        "index": {
          "type": "integer",
          "predicate": "ext:index"
        }
      },
      "relationships": {
        "active-players": {
          "predicate": "schema:homeTeam",
          "target": "player",
          "cardinality": "many"
        },
        "dealer":{
          "predicate": "schema:referee",
          "target": "player",
          "cardinality": "one"
        },
        "round": {
          "predicate": "schema:superEvent",
          "target": "round",
          "cardinality": "one"
        },
        "points": {
          "predicate": "ext:gameScore",
          "target": "point",
          "cardinality": "many"
        }
      },
      "new-resource-base": "http://example.com/hands/"
    },
    "points": {
      "name": "point",
      "class": "schema:Integer",
      "attributes": {
        "score": {
          "type": "integer",
          "predicate": "ext:value"
        }
      },
      "relationships": {
        "player": {
          "predicate": "ext:winner",
          "target": "player",
          "cardinality": "one"
        },
        "hand": {
          "predicate": "ext:gameScore",
          "target": "hand",
          "cardinality": "one",
          "inverse": true
        }
      },
      "new-resource-base": "http://example.com/points/"
    }
  }
}
